<div class="container-fluid" style="padding: 2.5rem 15rem 2.5rem 15rem">
  <h2 id="apartment-name-title"></h2>
  <form>
    <div class="form-group">
      <label for="apartment-name">Name</label>
      <input class="form-control" id="apartment-name" placeholder="Insert apartment name">
    </div>
    <div class="form-group">
      <label for="apartment-description">Description</label>
      <textarea class="form-control" id="apartment-description" rows="3"></textarea>
    </div>
    <div class="form-group">
      <label for="apartment-location">Location</label>
      <input class="form-control" id="apartment-location" placeholder="Insert apartment location">
    </div>
    <button id="submit-button" class="btn btn-secondary">Create apartment</button>
  </form>
</div>

<script src="<%= Routes.static_path(@conn, "/js/create_apartment.js") %>"></script>
